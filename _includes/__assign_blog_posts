{% assign blog_posts = site.empty_array %}
{% for post in site.blogs %}
  {% assign basename = post.relative_path | split: "/" | last %}
  {% if post.publish == basename %}
    {% assign blog_posts = blog_posts | push: post %}
  {% endif %}
{% endfor %}
{% assign blog_posts = blog_posts | concat: site.external_posts | sort: "date" %}
